 <% if !@game.finished? %>
 <h3><%= @game.current_player.name %>, you're up! Choose a move.</h3>

 <div id="actions">
   <div>
      <form action="/rock">
         <input class="button" class="btn" type='submit' value ='Rock'>
      </form>
   </div>
   <div>
      <form action="/paper">
         <input class="button" class="btn" type='submit' value ='Paper'>
      </form>
   </div>
   <div>
      <form action="/scissors">
      <input class="button" class="btn" type='submit' value ='Scissors'>
      </form>
   </div>
   <% if @game.game_type == 1 %>
 </br>
   <div>
      <form action="/lizard">
        <input class="button" class="btn" type='submit' value ='Lizard'>
      </form>
   </div>
   <div>
      <form action="/spock">
        <input class="button" type='submit' value ='Spock'>
   </div>
   </form>
   <% end %>
</div>
<% end %>
<% if @game.finished? %>

  <% if @game.winner == "Draw" %>
It was a Draw
    <% else %>
      <%= @game.winner.name %> beat <%= @game.opponent_of(@game.winner).name %>!
      <%= @game.winner.name %>'s <%= @game.winner.choice %> <%= @game.verb %> <%= @game.opponent_of(@game.winner).name %>'s <%= @game.opponent_of(@game.winner).choice %>

    <% end %>
<% end %>
